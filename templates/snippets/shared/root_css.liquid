:root {
  --sc-color-primary-h: 315;
  --sc-color-primary-s: 26%;
  --sc-color-primary-l: 37%;
  --sc-color-primary-a: 1;
  --sc-color-primary: hsla(315, 26%, 37%, 1);

  --sc-color-secondary-h: 300;
  --sc-color-secondary-s: 100%;
  --sc-color-secondary-l: 0%;
  --sc-color-secondary-a: 1;
  --sc-color-secondary: hsla(300, 100%, 0%, 1);

  --sc-navbar-bg: white;
  --sc-footer-bg: #261622;
  --sc-footer-color: white;
  --sc-menu-link-color-hover: #584147;
  --sc-border-radius: 4px;
  --sc-border-rounded: 7px;

  --sc-banner-btn-bg: hsla(315, 26%, 37%, 1);
  --sc-banner-btn-color: white;
  --sc-banner-btn-bg-hover: var(--sc-color-secondary);
  --sc-banner-btn-color-hover: white;

  --sc-image-beside-text-bg: var(--sc-color-primary);
  --sc-image-beside-text-color: white;
}
